    overflow: hidden;
  }

  .particle {
    position: absolute;
    width: 2px;
    height: 2px;
    background: rgba(255, 215, 0, 0.6);
    border-radius: 50%;
    animation: float 6s ease-in-out infinite;
    animation-delay: var(--delay);
    left: var(--x);
    top: var(--y);
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) scale(1);
      opacity: 0.6;
