---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import UniversalAdScriptObfuscated from "../components/UniversalAdScriptObfuscated.astro";
import siteConfig from "../../site.json";
---

<Layout
  title={`Contact Us - ${siteConfig.site.name}`}
  description={`Get in touch with ${siteConfig.site.name} team. We're here to help with app submissions, partnerships, feedback, and general inquiries. Contact us for support and collaboration opportunities.`}
  keywords="contact us, AI apps support, app submission, partnership, feedback, customer service"
  canonical={`https://${siteConfig.site.domain}/contact`}
>
  <Header />

  <!-- Hero Section -->
  <section
    class="relative overflow-hidden bg-gradient-to-br from-gray-950 via-black to-gray-900 py-20 text-white"
  >
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_70%_30%,rgba(255,215,0,0.1),transparent_50%)]"
    >
    </div>
    <div
      class="relative z-10 mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8"
    >
      <h1 class="mb-6 text-4xl font-bold md:text-6xl">
        Contact <span class="text-yellow-400">Us</span>
      </h1>
      <p class="mb-8 text-xl text-gray-300">
        We'd love to hear from you. Get in touch with our team.
      </p>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="bg-gradient-to-br from-gray-900 via-black to-gray-800 py-20">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-12 lg:grid-cols-2">
        <!-- Contact Information -->
        <div class="space-y-8">
          <div
            class="rounded-2xl border border-gray-700 bg-gray-900/50 p-8 shadow-2xl backdrop-blur-sm"
          >
            <h2 class="mb-6 text-3xl font-bold text-yellow-400">
              Get In Touch
            </h2>
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="mt-1 text-yellow-400">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                    ></path>
                    <path
                      d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="mb-1 font-semibold text-white">Email</h3>
                  <p class="text-gray-300">support@aiappsdirectory.com</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="mt-1 text-yellow-400">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="mb-1 font-semibold text-white">Location</h3>
                  <p class="text-gray-300">Global - Serving users worldwide</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="mt-1 text-yellow-400">
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="mb-1 font-semibold text-white">Response Time</h3>
                  <p class="text-gray-300">Within 24-48 hours</p>
                </div>
              </div>
            </div>
          </div>

          <div
            class="rounded-2xl border border-gray-700 bg-gray-900/50 p-8 shadow-2xl backdrop-blur-sm"
          >
            <h3 class="mb-4 text-2xl font-bold text-yellow-400">
              Why Contact Us?
            </h3>
            <ul class="space-y-3 text-gray-300">
              <li class="flex items-start space-x-2">
                <span class="mt-1 text-yellow-400">•</span>
                <span>Submit your AI application for review</span>
              </li>
              <li class="flex items-start space-x-2">
                <span class="mt-1 text-yellow-400">•</span>
                <span>Report issues or suggest improvements</span>
              </li>
              <li class="flex items-start space-x-2">
                <span class="mt-1 text-yellow-400">•</span>
                <span>Partnership and collaboration opportunities</span>
              </li>
              <li class="flex items-start space-x-2">
                <span class="mt-1 text-yellow-400">•</span>
                <span>General inquiries and feedback</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Contact Form -->
        <div
          class="rounded-2xl border border-gray-700 bg-gray-900/50 p-8 shadow-2xl backdrop-blur-sm"
        >
          <h2 class="mb-6 text-3xl font-bold text-yellow-400">Send Message</h2>
          <form class="space-y-6">
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
              <div>
                <label for="firstName" class="mb-2 block font-medium text-white"
                  >First Name</label
                >
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  class="w-full rounded-lg border border-gray-600 bg-gray-800 px-4 py-3 text-white placeholder-gray-400 focus:border-yellow-500 focus:ring-1 focus:ring-yellow-500 focus:outline-none"
                  placeholder="Your first name"
                  required
                />
              </div>
              <div>
                <label for="lastName" class="mb-2 block font-medium text-white"
                  >Last Name</label
                >
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  class="w-full rounded-lg border border-gray-600 bg-gray-800 px-4 py-3 text-white placeholder-gray-400 focus:border-yellow-500 focus:ring-1 focus:ring-yellow-500 focus:outline-none"
                  placeholder="Your last name"
                  required
                />
              </div>
            </div>

            <div>
              <label for="email" class="mb-2 block font-medium text-white"
                >Email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                class="w-full rounded-lg border border-gray-600 bg-gray-800 px-4 py-3 text-white placeholder-gray-400 focus:border-yellow-500 focus:ring-1 focus:ring-yellow-500 focus:outline-none"
                placeholder="your.email@example.com"
                required
              />
            </div>

            <div>
              <label for="subject" class="mb-2 block font-medium text-white"
                >Subject</label
              >
              <select
                id="subject"
                name="subject"
                class="w-full rounded-lg border border-gray-600 bg-gray-800 px-4 py-3 text-white focus:border-yellow-500 focus:ring-1 focus:ring-yellow-500 focus:outline-none"
                required
              >
                <option value="">Select a subject</option>
                <option value="app-submission">App Submission</option>
                <option value="partnership">Partnership</option>
                <option value="feedback">Feedback</option>
                <option value="technical-issue">Technical Issue</option>
                <option value="general">General Inquiry</option>
              </select>
            </div>

            <div>
              <label for="message" class="mb-2 block font-medium text-white"
                >Message</label
              >
              <textarea
                id="message"
                name="message"
                rows="6"
                class="w-full rounded-lg border border-gray-600 bg-gray-800 px-4 py-3 text-white placeholder-gray-400 focus:border-yellow-500 focus:ring-1 focus:ring-yellow-500 focus:outline-none"
                placeholder="Tell us how we can help you..."
                required></textarea>
            </div>

            <button
              type="submit"
              class="w-full transform rounded-lg bg-gradient-to-r from-yellow-500 to-yellow-600 px-6 py-3 font-bold text-black shadow-lg transition-all duration-300 hover:scale-105 hover:from-yellow-400 hover:to-yellow-500"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="bg-gradient-to-br from-gray-800 via-black to-gray-900 py-20">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div
        class="rounded-2xl border border-gray-700 bg-gray-900/50 p-8 shadow-2xl backdrop-blur-sm"
      >
        <h2 class="mb-8 text-center text-3xl font-bold text-yellow-400">
          Frequently Asked Questions
        </h2>
        <div class="space-y-6">
          <div class="border-b border-gray-700 pb-6">
            <h3 class="mb-3 text-xl font-semibold text-white">
              How can I submit my AI app for review?
            </h3>
            <p class="text-gray-300">
              You can submit your AI application by contacting us through the
              form above. Please include detailed information about your app,
              its features, and why it would be valuable to our users.
            </p>
          </div>

          <div class="border-b border-gray-700 pb-6">
            <h3 class="mb-3 text-xl font-semibold text-white">
              How long does the review process take?
            </h3>
            <p class="text-gray-300">
              Our review process typically takes 1-2 weeks. We carefully
              evaluate each application based on functionality, user experience,
              and overall value to our community.
            </p>
          </div>

          <div class="border-b border-gray-700 pb-6">
            <h3 class="mb-3 text-xl font-semibold text-white">
              Do you accept paid partnerships?
            </h3>
            <p class="text-gray-300">
              We maintain editorial independence and do not accept payment for
              app listings. All reviews and recommendations are based on merit
              and user value.
            </p>
          </div>

          <div>
            <h3 class="mb-3 text-xl font-semibold text-white">
              How can I report an issue with a listed app?
            </h3>
            <p class="text-gray-300">
              If you encounter issues with any app listed on our directory,
              please contact us with details about the problem. We take user
              feedback seriously and will investigate accordingly.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <UniversalAdScriptObfuscated />

  <Footer />
</Layout>
