---
import Layout from "../layouts/Layout.astro";
import siteConfig from "../../site.json";
import AdManagerDisplay from "../components/AdManagerDisplay.astro";
import PremiumAccessObfuscated from "../components/PremiumAccessObfuscated.astro";

// Get the download parameter from URL
const url = new URL(Astro.request.url);
const downloadParam = url.searchParams.get("download");
---

<Layout
  title={`Premium Access - ${siteConfig.site.name}`}
  description="Download premium access package with exclusive AI applications and tools"
  keywords="premium access, AI apps, exclusive tools, premium package"
  canonical={`https://${siteConfig.site.domain}/premium-access`}
>
  <!-- Fullscreen Premium Download Page -->
