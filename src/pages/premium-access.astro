    <!-- Animated Background -->
    <div class="absolute inset-0">
      <!-- Gradient Overlay -->
      <div
        class="absolute inset-0 bg-gradient-to-br from-yellow-500/10 via-transparent to-purple-500/10"
      >
      </div>

      <!-- Radial Gradient -->
      <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(255,215,0,0.1),transparent_70%)]"
      >
      </div>
    </div>

    <!-- Content Overlay -->
    <div class="relative z-10 flex h-screen items-center justify-center">
      <div
        class="mx-auto max-w-4xl px-2 text-center text-white sm:px-4 md:px-6 lg:px-8"
      >
        <!-- Premium Badge -->
        <div class="mb-4">
          <div
            class="inline-flex items-center rounded-full border-2 border-yellow-500/50 bg-gradient-to-r from-yellow-500/20 to-yellow-600/20 px-4 py-2 md:px-6 md:py-3 backdrop-blur-sm"
          >
            <svg
              class="mr-2 md:mr-3 h-4 w-4 md:h-6 md:w-6 text-yellow-400"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              ></path>
            </svg>
            <span class="text-sm md:text-lg font-bold text-yellow-400"
              >PREMIUM ACCESS</span
            >
          </div>
        </div>

        <!-- Main Title -->
        <h1 class="mb-2 md:mb-4 text-3xl font-bold md:text-5xl lg:text-7xl">
          <span
            class="block bg-gradient-to-r from-yellow-400 to-yellow-600 bg-clip-text text-transparent"
          >
            Premium Access
          </span>
          <span
            class="block text-xl font-light text-gray-300 md:text-3xl lg:text-4xl"
          >
            Package Download
          </span>
        </h1>

        <!-- Description -->
        <p
          class="mx-auto mb-2 md:mb-4 max-w-2xl text-base leading-relaxed text-gray-300 md:text-xl lg:text-2xl"
        >
          Download exclusive AI applications and premium tools package. Get
          access to the most advanced artificial intelligence applications.
        </p>

        <!-- Download Progress Container -->
        <div id="downloadContainer" class="mx-auto max-w-2xl mb-4">
          <!-- Progress Section (Visible initially) -->
          <div id="progressSection">
            <!-- Progress Bar -->
            <div class="mb-4 md:mb-6">
              <div
                class="mb-3 md:mb-4 flex items-center justify-between text-xs md:text-sm text-gray-300"
              >
                <span id="progressText">Preparing download...</span>
                <span id="progressPercent">0%</span>
              </div>
              <div
                class="relative h-3 md:h-4 overflow-hidden rounded-full bg-gray-800"
              >
                <div
                  id="progressBar"
                  class="h-full w-0 rounded-full bg-gradient-to-r from-yellow-500 to-yellow-600 transition-all duration-300 ease-out"
                >
                </div>
                <div
                  class="absolute inset-0 rounded-full bg-gradient-to-r from-yellow-400/20 to-yellow-600/20"
                >
                </div>
              </div>
            </div>

            <!-- Download Status -->
            <div id="downloadStatus" class="mb-6 md:mb-8">
              <div
                class="flex items-center justify-center space-x-2 md:space-x-3 text-sm md:text-lg text-gray-300"
              >
                <div id="statusIcon" class="h-5 w-5 md:h-6 md:w-6">
                  <svg
                    class="h-5 w-5 md:h-6 md:w-6 text-yellow-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <span id="statusText">Initializing download...</span>
              </div>
            </div>

            <!-- File Info -->
            <div
              class="rounded-xl border border-gray-700/50 bg-gray-900/30 p-6 backdrop-blur-sm"
            >
              <div class="mb-4 flex items-center justify-between">
                <div>
                  <h3 class="text-lg font-semibold text-white">
                    Premium Access Package
                  </h3>
                  <p class="text-sm text-gray-400">
                    AI Applications Collection
                  </p>
                </div>
                <div class="text-right">
                  <div class="text-lg font-bold text-yellow-400">2.4 GB</div>
                  <div class="text-xs text-gray-400">Package Size</div>
                </div>
              </div>

              <!-- Download Speed -->
              <div class="mb-4 flex items-center justify-between text-sm">
                <span class="text-gray-400">Download Speed:</span>
                <span id="downloadSpeed" class="text-yellow-400">0 MB/s</span>
              </div>

              <!-- Time Remaining -->
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-400">Time Remaining:</span>
                <span id="timeRemaining" class="text-yellow-400"
                  >Calculating...</span
                >
              </div>
            </div>
          </div>

          <!-- Success Section (Hidden initially) -->
          <div id="successSection" class="hidden">
            <div class="mb-2 md:mb-4 text-center">
              <div
                class="mx-auto mb-2 md:mb-4 flex h-16 w-16 md:h-20 md:w-20 items-center justify-center rounded-full bg-gradient-to-r from-green-500 to-green-600"
              >
                <svg
                  class="h-10 w-10 md:h-12 md:w-12 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <h3 class="mb-1 text-lg md:text-2xl font-bold text-white">
                Download Ready!
              </h3>
              <p class="text-sm md:text-lg text-gray-300">
                Your premium access package has been ready to download.
              </p>
            </div>

            <!-- Download Button -->
            <div class="md:mb-6 mb-4 text-center">
              <button
                id="startButton"
                class="group relative inline-flex transform items-center rounded-2xl border-2 border-yellow-400 bg-gradient-to-r from-yellow-500 to-yellow-600 p-4 text-lg font-bold text-black shadow-2xl transition-all duration-300 hover:scale-105 hover:from-yellow-400 hover:to-yellow-500 md:px-12 md:py-6 md:text-2xl"
              >
                <span>DOWNLOAD PREMIUM PACKAGE</span>
              </button>
            </div>

            <div
              class="rounded-xl border border-gray-700/50 bg-gray-900/30 px-4 py-2 md:p-4 backdrop-blur-sm"
            >
              <h4
                class="mb-1 md:mb-2 text-base md:text-lg font-semibold text-white"
              >
                What's Next?
              </h4>
              <ul
                class="space-y-1 md:space-y-2 text-xs md:text-sm text-gray-300"
              >
                <li class="flex items-center">
                  <svg
                    class="mr-2 h-3 w-3 md:h-4 md:w-4 text-yellow-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                  Download & Extract the package
                </li>
                <li class="flex items-center">
                  <svg
                    class="mr-2 h-3 w-3 md:h-4 md:w-4 text-yellow-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                  Install the applications
                </li>
                <li class="flex items-center">
                  <svg
                    class="mr-2 h-3 w-3 md:h-4 md:w-4 text-yellow-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                  Enjoy premium AI features
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Package Info -->
        <div class="mb-2 text-center">
          <div
            class="inline-flex w-full items-center justify-center rounded-xl border border-green-700/50 bg-green-600/20 px-6 py-3 backdrop-blur-sm"
          >
            <svg
              class="mr-3 h-5 w-5 md:h-6 md:w-6 text-yellow-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"
              ></path>
            </svg>
            <span class="text-sm md:text-base font-semibold text-white"
              >Verified & Secure Premium Package</span
            >
          </div>
        </div>
      </div>
    </div>
    <AdManagerDisplay />
  </div>
  <PremiumAccessObfuscated />
</Layout>
