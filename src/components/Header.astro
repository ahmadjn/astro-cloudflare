---
import CategoryIcons from "./CategoryIcons.astro";
import siteConfig from "../../site.json";

// Static categories for now
const categories = [
  {
    name: "Art & Design",
    slug: "art-design",
  },
  {
    name: "Entertainment",
    slug: "entertainment",
  },
  {
    name: "Music & Audio",
    slug: "music-audio",
  },
  {
    name: "Photography",
    slug: "photography",
  },
  {
    name: "Productivity",
    slug: "productivity",
  },
  {
    name: "Video Players & Editors",
    slug: "video-players-editors",
  },
];
---

<header
  class="relative z-50 border-b border-gray-800 bg-black/90 shadow-2xl backdrop-blur-md"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-20 items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-1">
          <svg
            fill="currentColor"
            class="w-10 h-10 text-yellow-400"
            viewBox="0 0 24 24"
            id="premium-ai-apps"
            data-name="Line Color"
            xmlns="http://www.w3.org/2000/svg"
            class="icon line-color"
          >
            <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
            <g
              id="SVGRepo_tracerCarrier"
              stroke-linecap="round"
              stroke-linejoin="round"></g>

            <g id="SVGRepo_iconCarrier">
              <line
                id="secondary"
                x1="13.11"
                y1="7"
                x2="7.56"
                y2="17"
                style="fill: none; stroke: #fbbf24; stroke-linecap: round; stroke-linejoin: round; stroke-width: 2;"
              ></line>

              <path
                id="secondary-2"
                data-name="secondary"
                d="M10.89,7l5.55,10M7,15H17"
                style="fill: none; stroke: #fbbf24; stroke-linecap: round; stroke-linejoin: round; stroke-width: 2;"
              ></path>

              <rect
                id="primary"
                x="3"
                y="3"
                width="18"
                height="18"
                rx="1"
                transform="translate(24) rotate(90)"
                style="fill: none; stroke: #fbbf24; stroke-linecap: round; stroke-linejoin: round; stroke-width: 2;"
              ></rect>
            </g>
          </svg>
          <span
            class="text-2xl font-bold bg-gradient-to-r from-yellow-400 to-yellow-600 inline-block text-transparent bg-clip-text"
            >{siteConfig.site.name}</span
          >
        </a>
      </div>

      <!-- Navigation -->
      <nav class="hidden space-x-8 md:flex">
        <a
          href="/"
          class="rounded-lg px-4 py-2 text-sm font-medium text-gray-300 transition-all duration-300 hover:bg-gray-800/50 hover:text-yellow-400"
        >
          Home
        </a>
        <div class="group relative">
          <button
            class="flex items-center rounded-lg px-4 py-2 text-sm font-medium text-gray-300 transition-all duration-300 hover:bg-gray-800/50 hover:text-yellow-400"
          >
            Categories
            <svg
              class="ml-1 h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div
            class="invisible absolute left-0 z-[9999] mt-2 w-64 rounded-xl border border-gray-700 bg-gray-900/95 opacity-0 shadow-2xl backdrop-blur-md transition-all duration-300 group-hover:visible group-hover:opacity-100"
          >
            <div class="space-y-2 p-4">
              {
                categories.map((category) => (
                  <a
                    href={`/category/${category.slug}`}
                    class="group/item flex items-center rounded-lg p-3 transition-colors hover:bg-gray-800"
                  >
                    <div class="mr-3 flex h-8 w-8 items-center justify-center rounded-lg bg-yellow-500/20 transition-colors group-hover/item:bg-yellow-500/30">
                      <CategoryIcons
                        category={category.slug}
                        class="h-4 w-4 text-yellow-400"
                      />
                    </div>
                    <div>
                      <div class="text-sm font-medium text-gray-300 group-hover/item:text-yellow-400">
                        {category.name}
                      </div>
                      <div class="text-xs text-gray-500">
                        {category.name === "Art & Design" &&
                          "Creative AI Tools"}
                        {category.name === "Entertainment" &&
                          "AI Entertainment Apps"}
                        {category.name === "Music & Audio" &&
                          "AI Music & Audio Apps"}
                        {category.name === "Photography" && "AI Photo Editing"}
                        {category.name === "Productivity" &&
                          "AI Workflow Tools"}
                        {category.name === "Video Players & Editors" &&
                          "AI Video Tools"}
                      </div>
                    </div>
                  </a>
                ))
              }
            </div>
          </div>
        </div>
        <a
          href="/landing"
          class="rounded-lg border border-yellow-400/50 bg-gray-800/50 px-4 py-2 text-sm font-medium text-yellow-400 transition-all duration-300 hover:border-yellow-500/90 hover:bg-gray-800/80 hover:text-yellow-500"
        >
          Landing Page
        </a>
      </nav>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="rounded-lg p-2 text-gray-300 transition-all duration-300 hover:text-yellow-400"
          id="mobile-menu-button"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="hidden md:hidden" id="mobile-menu">
      <div
        class="my-2 space-y-1 rounded-xl bg-gray-900/95 px-2 pt-2 pb-3 sm:px-3"
      >
        <a
          href="/"
          class="block rounded-lg px-3 py-2 text-base font-medium text-gray-300 transition-all duration-300 hover:text-yellow-400"
        >
          Home
        </a>
        <div class="space-y-1">
          <div class="px-3 py-2 text-base font-medium text-gray-300">
            Categories
          </div>
          {
            categories.map((category) => (
              <a
                href={`/category/${category.slug}`}
                class="block rounded-lg px-6 py-2 text-sm text-gray-400 transition-all duration-300 hover:text-yellow-400"
              >
                {category.name}
              </a>
            ))
          }
        </div>
        <a
          href="/landing"
          class="block rounded-lg px-3 py-2 text-base font-medium text-gray-300 transition-all duration-300 hover:text-yellow-400"
        >
          Landing Page
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>
