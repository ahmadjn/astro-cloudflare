---
import CategoryIcons from "./CategoryIcons.astro";

export interface Props {
  name: string;
  count: number;
  slug: string;
  description?: string;
}

const { name, count, slug, description } = Astro.props;
---

<a
  href={`/category/${slug}`}
  class="group transform rounded-2xl border border-gray-700 bg-gradient-to-br from-gray-800 to-gray-900 p-6 shadow-xl transition-all duration-300 hover:scale-105 hover:border-yellow-500/50 hover:from-gray-700 hover:to-gray-800 hover:shadow-2xl"
>
  <div class="mb-4 flex items-center justify-between">
    <div
      class="flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-br from-yellow-400 to-yellow-600 transition-transform duration-300 group-hover:scale-110"
    >
      <CategoryIcons category={slug} class="h-8 w-8 text-black" />
    </div>
    <div class="text-right">
      <span class="text-2xl font-bold text-yellow-400">{count}</span>
      <p class="text-sm text-gray-400">Apps</p>
    </div>
  </div>

  <h3
    class="mb-2 text-xl font-bold text-white transition-colors duration-300 group-hover:text-yellow-400"
  >
    {name}
  </h3>

  {
    description && (
      <p class="text-sm leading-relaxed text-gray-400">{description}</p>
    )
  }

  <div
    class="mt-4 flex items-center text-yellow-400 transition-colors duration-300 group-hover:text-yellow-300"
  >
    <span class="text-sm font-medium">Explore</span>
    <svg
      class="ml-2 h-4 w-4 transform transition-transform duration-300 group-hover:translate-x-1"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M9 5l7 7-7 7"></path>
    </svg>
  </div>
</a>
