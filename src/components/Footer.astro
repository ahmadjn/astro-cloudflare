---
import siteConfig from "../../site.json";
---

<footer class="border-t border-gray-800 bg-black/90 backdrop-blur-md">
  <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
      <!-- Brand -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center">
          <a href="/" class="flex items-center space-x-1">
            <svg
              fill="currentColor"
              class="w-10 h-10 text-yellow-400"
              viewBox="0 0 24 24"
              id="premium-ai-apps"
              data-name="Line Color"
              xmlns="http://www.w3.org/2000/svg"
              class="icon line-color"
            >
              <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
              <g
                id="SVGRepo_tracerCarrier"
                stroke-linecap="round"
                stroke-linejoin="round"></g>

              <g id="SVGRepo_iconCarrier">
                <line
                  id="secondary"
                  x1="13.11"
                  y1="7"
                  x2="7.56"
                  y2="17"
                  style="fill: none; stroke: #fbbf24; stroke-linecap: round; stroke-linejoin: round; stroke-width: 2;"
                ></line>

                <path
                  id="secondary-2"
                  data-name="secondary"
                  d="M10.89,7l5.55,10M7,15H17"
                  style="fill: none; stroke: #fbbf24; stroke-linecap: round; stroke-linejoin: round; stroke-width: 2;"
                ></path>

                <rect
                  id="primary"
                  x="3"
                  y="3"
                  width="18"
                  height="18"
                  rx="1"
                  transform="translate(24) rotate(90)"
                  style="fill: none; stroke: #fbbf24; stroke-linecap: round; stroke-linejoin: round; stroke-width: 2;"
                ></rect>
              </g>
            </svg>
            <span
              class="text-2xl font-bold bg-gradient-to-r from-yellow-400 to-yellow-600 inline-block text-transparent bg-clip-text"
              >{siteConfig.site.name}</span
            >
          </a>
        </div>
        <p class="mb-6 max-w-md text-lg leading-relaxed text-gray-400">
          Discover the Premium AI applications for your needs. From productivity
          tools to creative apps, find the perfect AI solution to enhance your
          digital experience.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="mb-6 text-lg font-semibold text-white">Creative AI Apps</h3>
        <ul class="space-y-3">
          <li>
            <a
              href="/category/art-design"
              class="text-gray-400 transition-all duration-300 hover:text-yellow-400"
              >Art & Design</a
            >
          </li>
          <li>
            <a
              href="/category/music-audio"
              class="text-gray-400 transition-all duration-300 hover:text-yellow-400"
              >Music & Audio</a
            >
          </li>
          <li>
            <a
              href="/category/photography"
              class="text-gray-400 transition-all duration-300 hover:text-yellow-400"
              >Photography</a
            >
          </li>
        </ul>
      </div>

      <!-- Productivity -->
      <div>
        <h3 class="mb-6 text-lg font-semibold text-white">
          Productivity AI Apps
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href="/category/productivity"
              class="text-gray-400 transition-all duration-300 hover:text-yellow-400"
              >Productivity</a
            >
          </li>
          <li>
            <a
              href="/category/entertainment"
              class="text-gray-400 transition-all duration-300 hover:text-yellow-400"
              >Entertainment</a
            >
          </li>
          <li>
            <a
              href="/category/video-players-editors"
              class="text-gray-400 transition-all duration-300 hover:text-yellow-400"
              >Video Players</a
            >
          </li>
        </ul>
      </div>
    </div>

    <div class="mt-12 border-t border-gray-800 pt-8">
      <div class="flex flex-col items-center justify-between md:flex-row">
        <p class="text-sm text-gray-400">
          Â© 2025 {siteConfig.site.name.toUpperCase()} - {
            siteConfig.site.domain.toUpperCase()
          }. ALL RIGHTS RESERVED.
        </p>
        <div class="mt-4 flex space-x-6 md:mt-0">
          <a
            href="/about"
            class="text-sm text-gray-400 transition-all duration-300 hover:text-yellow-400"
            >About</a
          >
          <a
            href="/contact"
            class="text-sm text-gray-400 transition-all duration-300 hover:text-yellow-400"
            >Contact</a
          >
          <a
            href="/privacy"
            class="text-sm text-gray-400 transition-all duration-300 hover:text-yellow-400"
            >Privacy</a
          >
          <a
            href="/terms"
            class="text-sm text-gray-400 transition-all duration-300 hover:text-yellow-400"
            >Terms</a
          >
          <a
            href="/disclaimer"
            class="text-sm text-gray-400 transition-all duration-300 hover:text-yellow-400"
            >Disclaimer</a
          >
        </div>
      </div>
    </div>
  </div>
</footer>
